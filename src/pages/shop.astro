---
import Layout from '../layouts/default.astro';
import ShopItems from '../layouts/shop-items.astro';
---

<Layout>

<div class="shop">
	<h1>Shop Sandwich Kits</h1>
		<noscript>
			<p>
				JavaScript is required to purchase things from the sandwich webstore. Order by phone 
				<a href="tell:1232342342234">+2519-09-343-42
				</a>
			</p>
		</noscript>

		<div class="products">
			<ShopItems />
			<p>show carts</p>
		</div>
</div>

</Layout>


<style>
.shop {
	padding: 3rem 5%;
}

.products {
	align-items: flex-start;
	display: grid;
	gap: 2rem;
	grid-template-columns: 1fr 260px;
	position: relative;
}

</style>